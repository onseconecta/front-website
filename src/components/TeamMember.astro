---
interface Props {
  name: string;
  role: string;
  image: ImageMetadata;
  linkedin?: string;
  instagram?: string;
}

const { name, role, image, linkedin, instagram } = Astro.props;
---

<div class="team-member">
  <div class="team-member-card">
    <div class="team-member-image-wrapper">
      <img src={image.src} alt={name} class="team-member-image" />
    </div>

    <div class="team-member-info">
      <h3 class="team-member-name">{name}</h3>
      <p class="team-member-role">{role}</p>

      {(linkedin || instagram) && (
        <div class="team-member-socials">
          {instagram && (
            <a
              href={instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              aria-label={`Instagram de ${name}`}
            >
              <svg viewBox="0 0 24 24" class="social-icon">
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path>
              </svg>
            </a>
          )}
          {linkedin && (
            <a
              href={linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              aria-label={`LinkedIn de ${name}`}
            >
              <svg viewBox="0 0 24 24" class="social-icon">
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  :root {
    --coral: #fd725b;
    --dark: #23232c;
  }

  .team-member {
    width: 100%;
  }

  .team-member-card {
    background: white;
    border-radius: 24px;
    padding: 32px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .team-member-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
  }

  .team-member-image-wrapper {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    /* overflow: ; */
    margin-bottom: 24px;
    position: relative;
    background: linear-gradient(135deg, #fd725b, #23232c);
    padding: 4px;
  }

  .team-member-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    object-position: top;
    background: white;
  }

  .team-member-info {
    width: 100%;
  }

  .team-member-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--dark);
    margin-bottom: 8px;
  }

  .team-member-role {
    font-size: 1rem;
    color: #6b7280;
    margin-bottom: 20px;
  }

  .team-member-socials {
    display: flex;
    gap: 16px;
    justify-content: center;
    align-items: center;
  }

  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    background: #f3f4f6;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: var(--dark);
    transform: translateY(-2px);
  }

  .social-icon {
    width: 20px;
    height: 20px;
    fill: var(--dark);
    transition: fill 0.2s ease;
  }

  .social-link:hover .social-icon {
    fill: white;
  }

  @media (max-width: 768px) {
    .team-member-card {
      padding: 28px 20px;
    }

    .team-member-image-wrapper {
      width: 150px;
      height: 150px;
      margin-bottom: 20px;
    }

    .team-member-name {
      font-size: 1.25rem;
    }

    .team-member-role {
      font-size: 0.9375rem;
      margin-bottom: 16px;
    }

    .social-link {
      width: 36px;
      height: 36px;
    }

    .social-icon {
      width: 18px;
      height: 18px;
    }
  }
</style>
